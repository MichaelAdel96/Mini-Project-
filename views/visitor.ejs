<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>My Portfolio</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <style media="screen">
        * {
            font-family: Montserrat, "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-weight: bolder;
        }
        .nice{
         font-family:courier;
         font-size:200%
        }

        .row {
            margin: 0;
        }

        .navbar-default {
            height: 100px;
            padding-top: 23px;
            padding-left: 70px;
            border: 0;
            border-radius: 0 !important;
            background: #2c3e50;
        }

        .navbar-default .navbar-brand {
            text-transform: uppercase;
            font-size: 2em;
            text-decoration: none;
            color: white;
            transition: color 0.3s ease;
            cursor: pointer;
        }

        .navbar-default .navbar-brand:hover {
            color: #18bc9c;
            transition: color 0.3s ease;
        }
        
        .cardMaster {
            padding: 2px;
            padding-top: 10px;
            background: #AAAAAA;
            border: 1px #c8c3ff solid;
            border-radius: 5px;
            text-align: center;
            margin: 2px 3% 1% 3%;
            height: 430px;
            width: calc(70% * (1/5));
        }


        .cardmini{
            
            padding: 0px;
            padding-top: 0px;
            background: #FFFFFF;
            border: 1px #c8c3ff solid;
            border-radius: 0px;
            text-align: center;
            margin: 0px 3% 1% 3%;
            height: 50px;
            width: 30%;
        }


        .card {
            padding: 2px;
            padding-top: 10px;
            background: #18bc9c;
            border: 1px #c8c3ff solid;
            border-radius: 1px;
            text-align: center;
            margin: 2px 3% 1% 3%;
            height: 180px;
            width: 95%;
        }
        .cardM {
            padding: 2px;
            padding-top: 0px;
            background: #FFFFFF;
            border: 1px #c8c3ff solid;
            border-radius: 5px;
            text-align: center;
            margin: 2px 3% 1% 3%;
            height: 50px;
            width: 95%;
        }        
        .cardI {
            padding: 2px;
            padding-top: 10px;
            background: #FFFFFF;
            border: 1px #c8c3ff solid;
            border-radius: 1px;
            text-align: center;
            margin: 2px 3% 1% 3%;
            height: 180px;
            width:  95%;
        }   
        .cardC {
            padding: 10px;
            padding-top: 20px;
            background: #33FF33;
            border: 1px #c8c3ff solid;
            border-radius: 5px;
            text-align: center;
            margin: 10px 3% 1% 3%;
            height: 190px;
            width: calc(80% * (1/3));
        }                 

        .card .card-title {
            color: #02695e;
            font-size: 2em;
            font-weight: bold;
            text-transform: capitalize;
        }

        .card .card-link {
            margin-top: 40px;
            font-size: 1.1em;
            font-weight: bold;
            width: 90%;
            border: 2px solid white;
            color: white;
            background: transparent;
            transition: background-color 0.5s ease;
        }
        .card .card-image {
            margin-top: 0px;
            width: 100%;
            border: 0px solid white;
        }

        .card .card-link:hover {
            color: #18bc9c;
            background: white;
            transition: background-color 0.5s ease;
        }

        .form-container {
            height: 400px;
            border-left: 1px solid gray;
            padding-left: 30px;
        }

        .form-control {
            width: 90%;
        }
    </style>
</head>

<body>

    <div class="row container-fluid" style="background: #c8c3ff">
          
         <div class="col-md-2"> 
          <h3><%=users.length %> Portfolio(s) </h1>
         </div>
         
         <div class="col-md-2"> 
          <h3><%=sum%> Work(s)</h1>
         </div>   

         <div class="col-md-2"> 
          <h3><%=page%></h1>
         </div>                  

    <div class="col-md-2">      
     <%  if(num!=0){ %>
       <div id=f2 >     
        <form id="form2" class="form" method="POST" action="/visitor2">
             <button type="submit" class="btn btn-default nice">Back</button>
        </form>
        </div>
     <%   }     %>   
    </div>

    <div class="col-md-2">      
     <% if(users.length>num+10){ %>
       <div id="f1" > 
        <form id="form" class="form" method="POST" action="/visitor2">
             <button type="submit" class="btn btn-default nice">Next</button>
        </form>
       </div>
      <%  }  %>
    </div>
        <div class="col-md-2 nice"> 
             <a   href="/">Home</a>
         </div> 

    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <% for(var i=num; i<users.length && i<num+10; i++){%>
                 
                <div class="cardMaster col-md-2">   
                   <div class="cardM">                    
                     <div class="cardmini col-md-6">
                        <img src="<%= users[i].image %>"width="100%" height="50px" class="card-image"></img>
                    </div>    
                    <div class="col-md-6">
                        <h4><%= users[i].username %></img>
                    </div>                                     
                 </div> 
                 <%  for(var j=0; j<users[i].work.length && j<2; j++ ) {%> 
                    <% if(users[i].work[j].chose == 1 ) { %>
                    <div class="card">
                        <h4 class="card-title"> <%= users[i].work[j].title %></h4>
                        <a href="<%= users[i].work[j].url %>" class="btn btn-primary card-link">Visit Website</a>
                    </div>
                    <%} %>
                    <% if(users[i].work[j].chose == 2 ) { %>
                    <div class="cardI">
                        <h4 class="card-title"> <%= users[i].work[j].title %></h4>
                        <img src="<%= users[i].work[j].screenshot %>"width="100%" height="125px" class="card-image"></img>
                    </div>
                    <%} %>
                    <% if(users[i].work[j].chose == 3 ) { %>
                    <div class="card">
                        <h4 class="cardC-title"> <%= users[i].work[j].title %></h4>
                        <a href="<%= users[i].work[j].code %>" class="btn btn-primary card-link">View file</a>
                    </div>
                    <%} %>
                        
                   <% }%>
                   </div>                    
            <%} %>


            </div>
        </div>
    </div>
    <div class="row">

<h2 style="display:none;" id="num"><%=num%></h2>           
    </div>


    <script type="text/javascript">

var x = Number(document.getElementById("num").textContent);

          $("#form").submit(function(){
 

      var input = $("<input>")
               .attr("type", "hidden")
               .attr("name", "num").val(x+10);
        $('#form').append($(input));     
          
      //  return false ; 
    });

        $("#form2").submit(function(){
             

      var input = $("<input>")
               .attr("type", "hidden")
               .attr("name", "num").val(x-10);
        $('#form2').append($(input));     
          
        
     });

</script>



</html>