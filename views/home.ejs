<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>My Portfolio</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <style media="screen">
        * {
            font-family: Montserrat, "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-weight: bolder;
        }

        .row {
            margin: 0;
        }

        .navbar-default {
            height: 100px;
            padding-top: 0px;
            padding-left: 0px;
            border: 0;
            border-radius: 0 !important;
            background: #2c3e50;
        }

        .navbar-default .navbar-brand {
            text-transform: uppercase;
            font-size: 2em;
            text-decoration: none;
            color: white;
            transition: color 0.3s ease;
            cursor: pointer;
        }

        .navbar-default .navbar-brand:hover {
            color: #18bc9c;
            transition: color 0.3s ease;
        }

        .card {
            padding: 2px;
            padding-top: 1px;
            background: #18bc9c;
            border: 1px #c8c3ff solid;
            border-radius: 1px;
            text-align: center;
            margin: 2px 3% 1% 3%;
            height: 190px;
            width: calc(80% * (1/3));
        }
        .cardI {
            padding: 2px;
            padding-top: 1px;
            background: #FFFFFF;
            border: 1px #c8c3ff solid;
            border-radius: 1px;
            text-align: center;
            margin: 2px 3% 1% 3%;
            height: 190px;
            width: calc(80% * (1/3));
        }   
        .cardC {
            padding: 10px;
            padding-top: 20px;
            background: #33FF33;
            border: 1px #c8c3ff solid;
            border-radius: 5px;
            text-align: center;
            margin: 10px 3% 1% 3%;
            height: 190px;
            width: calc(80% * (1/3));
        }                 

        .card .card-title {
            color: #02695e;
            font-size: 2em;
            font-weight: bold;
            text-transform: capitalize;
        }

        .card .card-link {
            margin-top: 40px;
            font-size: 1.1em;
            font-weight: bold;
            width: 90%;
            border: 2px solid white;
            color: white;
            background: transparent;
            transition: background-color 0.5s ease;
        }
        .card .card-image {
            margin-top: 2px;
            width: 100%;
            border: 2px solid white;
        }

        .card .card-link:hover {
            color: #18bc9c;
            background: white;
            transition: background-color 0.5s ease;
        }

        .form-container {
            height: 400px;
            border-left: 1px solid gray;
            padding-left: 30px;
        }

        .form-control {
            width: 90%;
        }
                    .button {
    background-color: #990000;
    border: none;
    color: white;
    padding: 2px 2px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    height: 70px;
    width: calc(90% );
}  
    .buttonsub {
    background-color: #4CAF50;
    border: none;
    color: white;
    padding: 5px 5px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 10px 10px;
    cursor: pointer;
} 
   .left{

       
    padding: 300px 0px 0px 0px;


   }     
      .nice{
         font-family:courier;
         font-size:200%
        }


    </style>
</head>

<body>
    <div >
        <div class="container-fluid" style="background:#999999">
            <div class="col-md-2">
                 <img src="<%= user.image%>"width="100px" height="100px" ></img> 
            </div>
            <div class="col-md-3">
                 <h3  style="left:100px">Portfolioname: <%=user.portofolioname%></h1>
            </div> 
            <div class="col-md-3">
                 <h3  style="left:100px">Username : <%=user.username%></h1>
            </div> 
         <div class="col-md-2 nice"> 
             <a   href="/">Home</a>
         </div> 
        <div class="col-md-2 nice"> 
             <a   href="/projects">View Students Portfolio</a>
         </div>                      
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-8">
            <div class="row">
                <% for(var i=0; i<user.work.length; i++){%>
                    <% if(user.work[i].chose == 1 ) { %>
                    <div class="card col-xs-4">
                        <h4 class="card-title"> <%= user.work[i].title %></h4>
                        <a href="<%= user.work[i].url %>" class="btn btn-primary card-link">Visit Website</a>
                    </div>
                    <%} %>
                    <% if(user.work[i].chose == 2 ) { %>
                    <div class="cardI col-xs-4">
                        <h4 class="card-title"> <%= user.work[i].title %></h4>
                        <img src="<%= user.work[i].screenshot %>"width="100%" height="150px" class="card-image"></img>
                    </div>
                    <%} %>
                    <% if(user.work[i].chose == 3 ) { %>
                    <div class="card col-xs-4">
                        <h4 class="cardC-title"> <%= user.work[i].title %></h4>
                        <a href="<%= user.work[i].code %>" class="btn btn-primary card-link">View file</a>
                    </div>
                    <%} %>
            <%} %>


            </div>
        </div>
 <div class="col-xs-12 col-md-4">
            <div class="form-container">
                <h3 style="margin-bottom:40px;">Add New Work</h3>
                    
                   <div class="col-xs-6">    
                      <button class="button" onclick="showDiv1()">Add URL</button>                       
                   </div>   
                   
                   <div class="col-xs-6">
                      <button class="button" onclick="showDiv2()">Add Screenshot</button>                       
                   </div>   
                  
             <!--      <div class="col-xs-4">
                      <button style="display: none;" class="button" onclick="showDiv3()">Add Code Repositery</button>                       
                   </div>   -->   
                
            <form class="form" id="form" method="POST" action="/home" enctype="multipart/form-data">


                    <div id="d0" style="display:none;" class="form-group">
                        <label for="InputTitle">Title</label>
                        <input name = "title" type="text" class="form-control" id="InputTitle" placeholder="Title">
                    </div>
                                    
                   
                    <div id="d1" style="display:none;" class="form-group">                      
                        <label for="InputLink">Link</label>
                        <input name = "url" type="url" class="form-control" id="InputLink" placeholder="Link">
                    </div>

                     <div id="d2" style="display:none;" class="form-group">                       
                        <label for="img">Browse for Screenshot</label>                         
                        <input type="file" name="img" id="img">
                    </div>

                     <div id="d3" style="display:none;" class="form-group">                        
                        <label for="code">Browse for Code Repositery</label>                           
                        <input type="file" name="img" id="code">
                    </div>

                   </br>
                   </br>
                   </br>  

                     <div id="err" style="display:none;" class="form-group">                        
                        <label >Please add a work!</label>                           
                    </div>
                     
                   </br>                         

                    <button id="sub" style="display:none;" type="submit" class="buttonsub">Done</button>
                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript">

    function showDiv1() {
      document.getElementById('d0').style.display = "block";
      document.getElementById('sub').style.display = "block";
      document.getElementById('d1').style.display = "block";
      document.getElementById('d2').style.display = "none";
      document.getElementById('d3').style.display = "none"; 
      document.getElementById('err').style.display = "none";       
      document.getElementById("img").value = "";                 
      document.getElementById("code").value = "";
    }
    function showDiv2() {
      document.getElementById('d0').style.display = "block";
      document.getElementById('sub').style.display = "block";        
      document.getElementById('d2').style.display = "block";
      document.getElementById('d1').style.display = "none";
      document.getElementById('d3').style.display = "none"; 
      document.getElementById('err').style.display = "none";          
      document.getElementById("InputLink").value = "";                 
      document.getElementById("code").value = ""; 

      var input = $("<input>")
               .attr("type", "hidden")
               .attr("name", "chose").val(2);
        $('#form').append($(input));              

    }
    function showDiv3() {
      document.getElementById('d0').style.display = "block";
      document.getElementById('sub').style.display = "block";        
      document.getElementById('d3').style.display = "block";
      document.getElementById('d1').style.display = "none";
      document.getElementById('d2').style.display = "none";  
      document.getElementById('err').style.display = "none";        
      document.getElementById("InputLink").value = "";                 
      document.getElementById("img").value = ""; 

      var input = $("<input>")
               .attr("type", "hidden")
               .attr("name", "chose").val(3);
        $('#form').append($(input));                        

    }    


$("#form").submit(function(){

       if(document.getElementById("InputTitle").value == ""){
           document.getElementById('err').style.display = "block";             
           return false;
       }
       if(document.getElementById("InputLink").value == "" && document.getElementById("img").value == ""  && document.getElementById("code").value == "" ){
           document.getElementById('err').style.display = "block";                   
           return false;
       }
       
       return true;

});
    
     </script>



</html>